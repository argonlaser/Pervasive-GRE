{
  "name": "Pervasive GRE",
  "version": "1.0",
  "description": "Highlight GRE vocabulary on any webpage.",
  "icons": {"16" : "icon16.png"
           },
  "background_page": "background.html",
  "browser_action": {
    "default_icon": "icon16.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "css": ["/assets/base.css", "/assets/hint.min.css"]
    }
  ],
  "permissions": [
    "tabs", "http://*/*"
  ]
}

